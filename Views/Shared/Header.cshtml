@using MongoDbTutorial.Models.Users
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <i class="fas fa-comments me-2"></i>
            ChatApp - <span id="header-username">@ViewBag.Username</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="nav-item me-2 position-relative">
                <input class="form-control" id="userSearch" type="text" placeholder="Search users..." autocomplete="off" />
                <div id="searchResults" class="list-group position-absolute w-100" style="z-index: 1000; display: none;">
                    @{
                        var followingList = ((List<UserResponse>)ViewBag.Users.Following);
                    }
                    @foreach (var user in ViewBag.AllUsers)
                    {
                        var isFollowing = followingList.Any(f => f.Id == user.Id);
                        <div class="user-item d-flex align-items-center justify-content-between p-2 border-bottom" data-user-id="@user.Id">
                            <div class="d-flex align-items-center">
                                <div class="user-avatar me-2">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="user-info">
                                    <div class="user-name">@user.FullName</div>
                                </div>
                            </div>
                            <button class="btn btn-sm btn-primary follow-btn" @(isFollowing ? "disabled" : "") data-user-id="@user.Id">
                                @(isFollowing ? "Following" : "Follow")
                            </button>
                        </div>
                    }
                </div>
            </div>


            <ul class="navbar-nav ms-auto">
                <li class="nav-item position-relative">
                    <a class="nav-link" href="#" id="notificationToggle">
                        <i class="fas fa-bell"></i> <span class="d-lg-none d-xl-inline">Notification</span>
                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle" id="notificationCount" style="display:none;">0</span>
                    </a>
                    <div id="notificationList" class="dropdown-menu dropdown-menu-end" style="width: 300px;"></div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#" id="toggle-users">
                        <i class="fas fa-users me-1"></i> <span class="d-lg-none d-xl-inline">Contacts</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="theme-toggle">
                        <i class="fas fa-moon me-1"></i> <span class="d-lg-none d-xl-inline">Theme</span>
                    </a>
                </li>
                <li class="nav-item">
                    <button id="logoutBtn" class="btn btn-outline-light btn-sm ms-lg-2">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        <span class="d-lg-none d-xl-inline">Logout</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Full Name:</strong> <span id="modalFullName"></span></p>
                <input type="hidden" id="modalUserId" />
            </div>
            <div class="modal-footer">
                <form id="antiForgeryForm" method="post"></form>
                <button id="followBtn" class="btn btn-primary">Follow</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('userSearch');
        const searchResults = document.getElementById('searchResults');
        const logoutBtn = document.getElementById('logoutBtn');

        searchInput.addEventListener('input', function () {
            const query = this.value.trim();
            if (!query) {
                searchResults.style.display = 'none';
                searchResults.innerHTML = '';
                return;
            }

            fetch(`/Account/SearchUsers?query=${encodeURIComponent(query)}`)
                .then(res => res.json())
                .then(tasks => {
                    searchResults.innerHTML = '';
                    if (tasks.length === 0) {
                        searchResults.style.display = 'none';
                        return;
                    }

                    tasks.forEach(task => {
                        const user = task.result; // <-- important
                        const div = document.createElement('div');
                        div.className = 'list-group-item d-flex justify-content-between align-items-center';
                        div.innerHTML = `
                            <div>${user.fullName}</div>
                            <button class="btn btn-sm btn-primary follow-btn" ${user.isFollowing ? 'disabled' : ''} data-user-id="${user.id}">
                                ${user.isFollowing ? 'Following' : 'Follow'}
                            </button>
                        `;
                        searchResults.appendChild(div);
                    });

                    searchResults.style.display = 'block';
                });
        });

        // Delegate click for follow buttons
        searchResults.addEventListener('click', function (e) {
            if (!e.target.classList.contains('follow-btn')) return;

            const btn = e.target;
            const userId = btn.dataset.userId;

            fetch(`/Account/Follow/${userId}`, { method: 'POST' })
                .then(res => res.json())
                .then(result => {
                    if (result.success) {
                        btn.textContent = 'Following';
                        btn.disabled = true;
                    }
                });
        });

        logoutBtn.addEventListener('click', () => {
        fetch('/Account/Logout', {
            method: 'POST'            
        })
        .then(res => {
            if (res.ok) {
                window.location.href = '/Account/Login';
            } else {
                alert('Logout failed');
            }
        })
        .catch(err => console.error(err));
    });

    });
</script>

